}

/* Animación de desplazamiento */
@keyframes loop {
    0% {
        transform: translateX(0);
    }
    50% {
        transform: translateX(calc(-50% - 1rem)); /* Desplazamiento hacia la izquierda a la mitad */
        opacity: 1; /* Opacidad al 50% */
    }
    100% {
        transform: translateX(calc(-50% - 1rem)); /* Desplazamiento hacia la izquierda */
        opacity: 1; /* Opacidad completa */
    }
}
