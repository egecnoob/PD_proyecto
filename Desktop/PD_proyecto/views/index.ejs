}

.flicker1 {
    animation: parpadear 2s infinite backwards steps(3);
}

.flicker2 {
    animation: parpadear 2.5s infinite backwards steps(4);
}

.flicker3 {
    animation: parpadear 1.5s infinite backwards steps(2);
}

.flicker4 {
    animation: parpadear 1.5s infinite backwards steps(2);
}

@keyframes parpadear {
    from {
        opacity: 0.8;
    }
    to {
        opacity: 0.4;
    }
}

@keyframes move {
    from {
        transform: translateX(-10px);
    }
    to {
        transform: translateX(10px);
    }
}

.contenedor-paisajes {
